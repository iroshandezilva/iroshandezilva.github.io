{
  "name": "tailwind-setup",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "dev": {
      "patterns": [
        "src"
      ],
      "extensions": "css",
      "delay": 1500,
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "dev": "postcss src/app.css -o public/assets/css/style.css",
    "prod": "cross-env NODE_ENV=production postcss src/app.css -o public/assets/css/style.css",
    "watch": "npm-watch"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.6",
    "postcss": "^8.3.2",
    "tailwindcss": "^2.2.2"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "npm-watch": "^0.10.0",
    "postcss-cli": "^8.3.1"
  }
}
